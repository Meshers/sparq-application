<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sparq">

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".application.userinterface.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.userinterface.EventActivity"
            android:label="@string/title_activity_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.userinterface.ConverstaionThreadActivity"
            android:label="@string/title_activity_converstaion_thread"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.userinterface.AnswerActivity"
            android:label="@string/title_activity_answer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.userinterface.QuestionareActivity"
            android:label="@string/title_activity_questionare"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.userinterface.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".application.userinterface.NewEventActivity"
            android:label="@string/title_activity_new_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.userinterface.NewQuestionareActicity"
            android:label="@string/title_activity_new_questionare_acticity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.userinterface.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <provider android:name="application.userinterface.database.ApplicationContentProvider"
            android:authorities="com.sparq.application.userinterface.database.ApplicationContentProvider"/>
    </application>

</manifest>