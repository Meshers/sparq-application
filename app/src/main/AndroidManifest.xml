<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sparq">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".application.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.EventActivity"
            android:label="@string/title_activity_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.ConverstaionThreadActivity"
            android:label="@string/title_activity_converstaion_thread"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.AnswerActivity"
            android:label="@string/title_activity_answer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.QuestionareActivity"
            android:label="@string/title_activity_questionare"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".application.NewEventActivity"
            android:label="@string/title_activity_new_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".application.NewQuestionareActicity"
            android:label="@string/title_activity_new_questionare_acticity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>