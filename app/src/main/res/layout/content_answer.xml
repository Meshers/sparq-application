<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    card_view:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sparq.application.userinterface.AnswerActivity"
    tools:showIn="@layout/activity_answer">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q:"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/question_size"/>
            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:text="How does this work?"
                android:layout_height="wrap_content"
                android:textSize="@dimen/question_size"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A:"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/question_size"/>
            <TextView
                android:id="@+id/answer_text"
                android:layout_width="match_parent"
                android:text="Answer"
                android:layout_height="wrap_content"
                android:textSize="@dimen/question_size"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_id_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="User ID:"
                        android:textColor="@color/secondaryText" />

                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="-"
                        android:textColor="@color/secondaryText"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="end|bottom">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/secondaryText"
                    android:text="Votes"
                    android:textSize="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/answer_votes"
                    android:textColor="@color/secondaryText"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:text="0"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/like"
                    android:src="@drawable/ic_like"
                    android:layout_width="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="30dp" />

                <ImageView
                    android:id="@+id/unlike"
                    android:src="@drawable/ic_unlike"
                    android:layout_width="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="30dp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
